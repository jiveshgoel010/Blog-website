<div class="author">
    <h1 class="author-heading">Hi, I am Jivi.</h1>
    <p class="author-body">Web Developer</p>
</div>

<img src="/img/hero-image.webp" width="700px" height="400px" class="hero-image">

<section class="articles">
    <h2 class="articles-heading">Latest Posts</h2>

    <ul class="articles-ul">

        <% data.forEach(element => { %>
            <li>
                <a href="/post/<%= element._id %>">
                    <span><%= element.title %></span>
                    <span class="articles-list-date"><%= element.createdAt.toDateString() %></span>
                </a>
            </li>
        <% }) %>

    </ul>

    <% if (nextPage !== null) { %>
     
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View older posts</a>
    <% } %>
</section>